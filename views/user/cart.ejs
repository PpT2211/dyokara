<h1>
	Cart
</h1>

<% user.cart.forEach(function(item){%>
	<div>
		<li><%=item.name%></li>
		<img src="<%=item.image%>">
		<li>$<%=item.price%></li>
	</div>
	<form id="delete-form" action="/<%=user._id%>/<%=item._id%>/cart/remove?_method=DELETE" method="POST">
		<input type="submit" class="btn btn-xs btn-danger" value="Delete">
</form>
<%})%>

<a href="/cartCheckout">Buy</a>
<a href="/products">Back</a>