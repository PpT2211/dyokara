<h1>
	Wishlist
</h1>

<% user.wishlist.forEach(function(item){%>
	<div>
		<li><%=item.name%></li>
		<img src="<%=item.image%>">
		<li>$<%=item.price%></li>
	</div>
	<form id="delete-form" action="/<%=user._id%>/<%=item._id%>/wishlist/remove?_method=DELETE" method="POST">
		<input type="submit" class="btn btn-xs btn-danger" value="Delete">
	</form>
	<a href="/<%= currentUser._id%>/<%=item._id%>/cart">Add to cart</a>
<br/>
<br/>
<br/>
<br/>
	
<%})%>

<a href="/cartCheckout">Buy</a>
<a href="/products">Back</a>